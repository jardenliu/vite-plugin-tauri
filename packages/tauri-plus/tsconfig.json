{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
    }
}